@model List<Product>

<div class="container">
        <div class="row pt-4 pb-2">
            <div class="col-6">
                <h2 class="text-primary">
                    Product List
                </h2>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-square-fill"></i> Create New Product
                </a>
            </div>
        </div>

    <table class="table table-bordered table-striped">
        <thead>
        <tr>
            <th>Title</th>
            <th>ISBN</th>
            <th>Price</th>
            <th>Author</th>
            <th>Category</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Title</td>
                <td>@category.ISBN</td>
                <td>@category.ListPrice</td>
                <td>@category.Author</td>
                <td>@category.CategoryId</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Product" asp-action="Edit" asp-route-Id="@category.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-tools"></i> Edit
                        </a>
                        
                        <a asp-controller="Product" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash"></i> Delete
                        </a>

                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>